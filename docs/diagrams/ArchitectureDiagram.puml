@startuml
!include <office/Concepts/globe_internet>
!include <office/Concepts/documents>
!include <office/Users/user>
!include style.puml

' --- Layout & Spacing ---
skinparam packageStyle rectangle
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 80
skinparam class {
    BackgroundColor White
    BorderColor Black
    FontSize 14
}

' --- Package contents ---
package " " <<Rectangle>> {
    class UI UI_COLOR
    class Logic LOGIC_COLOR
    class Storage STORAGE_COLOR
    class Model MODEL_COLOR
    class Main #grey
    class Commons LOGIC_COLOR_T2
}

class "<$user>" as User MODEL_COLOR_T2
class "<$documents>" as File UI_COLOR_T1

' --- Relative placement hints ---
UI -[hidden]-> Logic
Logic -[hidden]-> Storage
Storage -[hidden]-> Model

' --- Connections ---
UI -[#green]> Logic
UI -right[#green]-> Model

Logic -[#blue]-> Storage
Logic -down[#blue]-> Model

Main -[#grey]-> UI
Main -[#grey]-> Logic
Main -[#grey]-> Storage
Main -up[#grey]-> Model
Main -down[hidden]-> Commons

Storage -up[STORAGE_COLOR].> Model
Storage .right[STORAGE_COLOR].> File

User ..> UI

@enduml
